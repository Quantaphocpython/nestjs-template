{
    "name": "base-app",
    "version": "0.0.1",
    "description": "Boilerplate for web APIs using NestJS",
    "author": "Rafael Pezzetti <rafael.pezzetti@gmail.com>",
    "license": "MIT",
    "packageManager": "pnpm@10.2.1",
    "scripts": {
        "preinstall": "only-allow pnpm",
        "build": "rimraf dist && tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
        "format": "prettier --write \"src/**/*.ts\"",
        "start": "ts-node -r tsconfig-paths/register src/main.ts",
        "dev": "nest start -w",
        "start:debug": "tsc-watch -p tsconfig.build.json --onSuccess \"node --inspect-brk dist/main.js\"",
        "start:prod": "node dist/main.js",
        "lint": "eslint . --ext .ts,.tsx --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "prisma": "npx prisma db pull && npx prisma generate",
        "prisma:studio": "npx prisma studio",
        "prisma:pull": "npx prisma db pull",
        "prisma:push": "npx prisma db push",
        "test:cov": "jest --coverage",
        "test:cov:html": "jest --coverage --coverageReporters=html",
        "test:cov:text": "jest --coverage --coverageReporters=text-summary",
        "test:cov:lcov": "jest --coverage --coverageReporters=lcov",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e:debug": "node --inspect-brk node_modules/.bin/jest --runInBand --config ./test/jest-e2e.json",
        "test:e2e": "jest --config ./test/jest-e2e.json --detectOpenHandles"
    },
    "dependencies": {
        "@keyv/redis": "^5.1.3",
        "@nestjs/cache-manager": "^3.0.1",
        "@nestjs/common": "^11.1.8",
        "@nestjs/config": "^4.0.2",
        "@nestjs/core": "^11.1.8",
        "@nestjs/event-emitter": "^3.0.1",
        "@nestjs/jwt": "^11.0.1",
        "@nestjs/mapped-types": "^2.1.0",
        "@nestjs/passport": "^11.0.5",
        "@nestjs/platform-express": "^11.1.8",
        "@nestjs/platform-fastify": "^11.1.8",
        "@nestjs/swagger": "^11.2.1",
        "@nestjs/throttler": "^6.4.0",
        "@prisma/client": "^6.18.0",
        "@sentry/nestjs": "^10.22.0",
        "@sentry/profiling-node": "^10.22.0",
        "bcrypt": "^6.0.0",
        "body-parser": "^2.2.0",
        "cache-manager": "^7.2.4",
        "cacheable": "^2.1.1",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.2",
        "cookie-parser": "^1.4.7",
        "dotenv": "^17.2.3",
        "express": "^5.1.0",
        "faker-js": "^1.0.0",
        "fastify": "^5.6.1",
        "glob": "^11.0.3",
        "helmet": "^8.1.0",
        "inflight": "^1.0.6",
        "ioredis": "^5.8.2",
        "joi": "^18.0.1",
        "keyv": "^5.5.3",
        "mysql": "^2.17.1",
        "nest-winston": "^1.10.2",
        "nyc": "^14.1.1",
        "passport": "^0.7.0",
        "passport-jwt": "^4.0.1",
        "passport-local": "^1.0.0",
        "pg": "^7.12.1",
        "q": "^1.5.1",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^6.1.0",
        "rxjs": "^7.8.2",
        "swagger-ui-express": "^4.1.5",
        "uuid": "^13.0.0",
        "winston": "^3.18.3",
        "winston-transport": "^4.9.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^12.1.2",
        "@commitlint/config-conventional": "^12.1.2",
        "@eslint/eslintrc": "^3.3.1",
        "@eslint/js": "^9.39.1",
        "@faker-js/faker": "^10.1.0",
        "@fastify/static": "^8.3.0",
        "@nestjs/cli": "^11.0.10",
        "@nestjs/schematics": "^11.0.9",
        "@nestjs/testing": "^11.1.8",
        "@types/bcrypt": "^6.0.0",
        "@types/body-parser": "^1.19.6",
        "@types/cookie-parser": "^1.4.10",
        "@types/express": "^4.17.1",
        "@types/hapi__joi": "^16.0.2",
        "@types/jest": "^24.0.18",
        "@types/node": "^24.9.1",
        "@types/passport-jwt": "^3.0.3",
        "@types/passport-local": "^1.0.33",
        "@types/supertest": "^2.0.8",
        "@typescript-eslint/eslint-plugin": "^8.46.2",
        "@typescript-eslint/parser": "^8.46.2",
        "eslint": "^9.39.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-import-resolver-typescript": "^2.2.0",
        "eslint-plugin-import": "^2.22.0",
        "eslint-plugin-jest": "^23.20.0",
        "eslint-plugin-prettier": "^3.1.4",
        "globals": "^16.5.0",
        "husky": "^4.2.1",
        "jest": "^30.2.0",
        "only-allow": "^1.2.1",
        "prettier": "^3.3.3",
        "supertest": "^7.1.4",
        "ts-jest": "^29.4.5",
        "ts-loader": "^6.1.1",
        "ts-node": "^10.9.2",
        "tsc-alias": "^1.8.16",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^5.9.3"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run lint",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "./coverage",
        "testEnvironment": "node",
        "collectCoverage": true,
        "moduleNameMapper": {
            "^src/(.*)$": "<rootDir>/$1"
        }
    }
}
